<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:id="@+id/relativeLayoutActivities"
    android:background="@color/colorBlack">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:id="@+id/activityImage"
        android:src="@drawable/ic_baseline_person"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:layout_toEndOf="@id/activityImage"
        android:layout_toRightOf="@id/activityImage"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/enquiryName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="Description"
        android:layout_below="@+id/enquiryName"
        android:layout_toRightOf="@id/activityImage"
        android:textColor="@color/colorAccent"
        android:id="@+id/enquiryDescription" />

    <TextView
        android:id="@+id/activityStatus"
        android:layout_width="120dp"
        android:paddingRight="5dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:text="Resolved"
        android:textSize="12dp"
        android:textStyle="bold|italic" />
</RelativeLayout>
